programa {
  funcao inicio() {
    inteiro Homens, Mulheres
    escreva ("Insira quantidade de Homens no evento: ")
    leia(Homens)
    escreva ("Insira quantidade de Mulheres no evento: ")
    leia(Mulheres)
    escreva("\nA quantidade de Homens no evento foi de: " + Homens)
    escreva("\nA quantidade de Mulheres no evento foi de: " + Mulheres)

    cadeia Resposta

    escreva("\nOs valores adicionados estão corretos?")
     
    escreva("\n Digite S para encerrar | Digite N para resetar:" )
    leia(Resposta)
    enquanto (Resposta == "N") {
    escreva ("\nInsira quantidade de Homens no evento: ")
    leia(Homens)
    escreva ("\nInsira quantidade de Mulheres no evento: ")
    leia(Mulheres)
    escreva("\nA quantidade de Homens no evento foi de: " + Homens)
    escreva("\nA quantidade de Mulheres no evento foi de: " + Mulheres)
    escreva("\nOs valores adicionados estão corretos?")
    escreva("\n Digite S para encerrar | Digite N para resetar:" )
    Resposta == "S"
    leia (Resposta)
    }
    }
}
